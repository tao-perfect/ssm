    id, bookname, price, booktype, bookimage
  </sql>
  <select useCache="true" id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from t_book
    where id = #{id,jdbcType=INTEGER}
  </select>
  <select id="queryBookPager" resultType="com.zking.ssm.model.Book" parameterType="com.zking.ssm.model.Book">
    select <include refid="Base_Column_List"/>
    from t_book where 1=1
    <if test="null!=bookname and ''!=bookname">
       and bookname like concat('%',#{bookname},'%')
    </if>
  </select>
    <select id="queryByMap" resultType="map">
      select <include refid="Base_Column_List"/>
      from t_book where id=170
    </select>
